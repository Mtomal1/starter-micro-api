<!-- set.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Set Details</title>
    <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">
    <%- include('partials/navbar', { page: "" }) %>

    <div class="container mx-auto">

        <div class="hero bg-base-200 rounded-lg p-6">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold"><%= set.name %></h1>
                    <p>Below, you will find detailed information about the set:</p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <img class="w-full rounded-lg" src="<%= set.img_url %>" alt="<%= set.name %>" class="w-15 h-auto" />
            </div>

            <div class="prose">
                <p><strong>Name:</strong> <%= set.name %></p>
                <p><strong>Year Released:</strong> <%= set.year %></p>
                <p><strong>Theme:</strong> <%= set.theme %></p>
                <p><strong>Number of Parts:</strong> <%= set.num_parts %></p>
                
                <div id="quote-container"></div>

                <a href="#" onclick="history.back(); return false;" class="btn btn-primary mt-4">Back</a>
            </div>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", () => {
                // Fetch data from quotable.io/random
                fetch('https://api.quotable.io/random')
                    .then(response => response.json())
                    .then(data => {
                        // Update DOM element with quote content
                        const quoteContainer = document.getElementById('quote-container');
                        quoteContainer.innerHTML = `<blockquote>${data.content}</blockquote><cite>${data.author}</cite>`;
                    })
                    .catch(error => console.error('Error fetching quote:', error));
            });
        </script>

    </div>
</body>

</html>
